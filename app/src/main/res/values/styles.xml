<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="redButtonStyle">
        <item name="android:background">@drawable/red_background</item>
        <item name="android:fontFamily">@font/btn_font_cairo_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="header_4">
        <item name="android:fontFamily">@font/base_font_cairo</item>
        <item name="android:textColor">@color/g_black</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
    </style>
    <style name="header_3">
        <item name="android:fontFamily">@font/btn_font_cairo_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
    </style>
    <style name="sub_header_2">
        <item name="android:fontFamily">@font/sub_title_font_cairo_light</item>
        <item name="android:textColor">@color/titleSecondary</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
    </style>


    <style name="postTextCaption">
        <item name="android:fontFamily">@font/sub_title_font_cairo_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/postTextCaptionSize</item>
    </style>




    <style name="whiteButtonStyle">
        <item name="android:background">@drawable/white_background</item>
        <item name="android:fontFamily">@font/btn_font_cairo_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="editText">
        <item name="android:background">@drawable/white_background</item>
        <item name="android:gravity">center</item>
        <item name="singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/btn_font_cairo_black</item>
    </style>


    <dimen name="h4TextSize">30sp</dimen>
    <dimen name="h3TextSize">22sp</dimen>
    <dimen name="h2TextSize">@dimen/_16sdp</dimen>
    <dimen name="postTextCaptionSize">14sp</dimen>

    <style name="DialogStylle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="tabLayout_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/base_font_cairo</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigationTextStyle">
        <item name="android:fontFamily">@font/sub_title_font_cairo_light</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
    </style>
</resources>