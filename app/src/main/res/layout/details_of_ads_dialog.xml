<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/base_font_cairo"
            android:text="تفاصيل الاعلان"
            android:gravity="center"
            android:textDirection="rtl"
            android:textColor="@color/title"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_owner_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/base_font_cairo"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="الاعلان ممول بواسطة المالك : عبد العزيز عزت"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/details_title" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScroll_descriptionAds"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@+id/tv_owner_title"
            app:layout_constraintStart_toStartOf="@+id/tv_owner_title"
            app:layout_constraintEnd_toEndOf="@id/tv_owner_title">

            <TextView
                android:id="@+id/tvDescription_ads"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_2sdp"
                android:fontFamily="@font/sub_title_font_ciaro_light"
                android:textStyle="bold"
                android:layoutDirection="rtl"
                android:text="إدارة vipers gym مستمره فى عروضها ودعم الشباب، مواعيد الفترتين ثابته للشباب والسيدات ، وقررنا التعاون مع أولياء الأمور وأخواتنا المتدربين الصغيرين  إدارة vipers gym مستمره فى عروضها ودعم الشباب، مواعيد الفترتين ثابته للشباب والسيدات ، وقررنا التعاون مع أولياء الأمور وأخواتنا المتدربين الصغيرينوقررنا التعاون مع أولياء الأمور وأخواتنا المتدربين الصغيرينوقررنا التعاون مع أولياء الأمور وأخواتنا المتدربين الصغيرينوقررنا التعاون مع أولياء الأمور وأخواتنا المتدربين الصغيرينوقررنا التعاون مع أولياء الأمور وأخواتنا المتدربين الصغيرينوقررنا التعاون مع أولياء الأمور وأخواتنا المتدربين الصغيرينوقررنا التعاون مع أولياء الأمور وأخواتنا المتدربين الصغيرينوقررنا التعاون مع أولياء الأمور وأخواتنا المتدربين الصغيرينوقررنا التعاون مع أولياء الأمور وأخواتنا المتدربين الصغيرينوقررنا التعاون مع أولياء الأمور وأخواتنا المتدربين الصغيرينوقررنا التعاون مع أولياء الأمور وأخواتنا المتدربين الصغيرين "
                android:textColor="@color/g_gray700"
                android:textSize="@dimen/_13sdp" />

        </androidx.core.widget.NestedScrollView>


        <TextView
            android:id="@+id/tv_days_and_date_of_ads"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="المواعيد : حد - ثلاثاء - اربع - خميس - الساعة
        المواعيد : حد - ثلاثاء - اربع - خميس - الساعة 9المواعيد : حد - ثلاثاء - اربع - خميس - الساعة 99"
            android:fontFamily="@font/base_font_cairo"
            android:lineSpacingMultiplier="0.7"
            android:layoutDirection="rtl"
            android:drawablePadding="@dimen/_4sdp"
            android:drawableStart="@drawable/day_ic"
            app:layout_constraintEnd_toEndOf="@+id/nestedScroll_descriptionAds"
            app:layout_constraintStart_toStartOf="@+id/nestedScroll_descriptionAds"
            app:layout_constraintTop_toBottomOf="@id/nestedScroll_descriptionAds" />

        <TextView
            android:id="@+id/tv_place_of_ads"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="م.سلطان , المحطة اسفل محل توب 10"
            android:fontFamily="@font/base_font_cairo"
            android:drawableStart="@drawable/location"
            android:drawablePadding="@dimen/_4sdp"
            android:layoutDirection="rtl"
            app:layout_constraintEnd_toEndOf="@+id/tv_days_and_date_of_ads"
            app:layout_constraintStart_toStartOf="@+id/tv_days_and_date_of_ads"
            app:layout_constraintTop_toBottomOf="@id/tv_days_and_date_of_ads" />

        <TextView
            android:id="@+id/tv_date_published_of_ads"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="تاريخ نشر الاعلان : الاربعاء الساعة 9 مساءاً"
            android:fontFamily="@font/base_font_cairo"
            android:textColor="@color/g_gray700"
            android:layoutDirection="rtl"
            android:layout_marginEnd="@dimen/_4sdp"
            android:drawablePadding="@dimen/_8sdp"
            android:drawableStart="@drawable/time_ic"
            app:layout_constraintStart_toStartOf="@+id/tv_place_of_ads"
            app:layout_constraintEnd_toEndOf="@+id/tv_place_of_ads"
            app:layout_constraintTop_toBottomOf="@id/tv_place_of_ads" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tv_place_of_ads"
            app:layout_constraintStart_toStartOf="@id/tv_place_of_ads"
            app:layout_constraintTop_toBottomOf="@id/tv_date_published_of_ads"
            android:orientation="horizontal">

            <com.github.leandroborgesferreira.loadingbutton.customViews.CircularProgressButton
                android:id="@+id/buttonCancel_back_ads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:fontFamily="@font/btn_font_cairo_black"
                android:background="@drawable/white_background"
                android:text="عودة"
                app:spinning_bar_color="@color/black"
                android:textAllCaps="false" />

            <com.github.leandroborgesferreira.loadingbutton.customViews.CircularProgressButton
                android:id="@+id/buttonEnquiry_of_ads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:fontFamily="@font/btn_font_cairo_black"
                android:background="@drawable/red_background"
                android:textColor="@color/white"
                android:text="استعلام"
                app:spinning_bar_color="@color/white"
                android:textAllCaps="false" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>