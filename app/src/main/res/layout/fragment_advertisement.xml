<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>



    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollAdsPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/empty_list_animation"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_250sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:lottie_autoPlay="true"
                android:layout_marginBottom="@dimen/_29sdp"
                android:visibility="gone"
                app:lottie_rawRes="@raw/empty_list_animation"
                app:lottie_loop="true"
                />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lost_connect_animation"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_250sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:lottie_autoPlay="true"
                android:layout_marginBottom="@dimen/_29sdp"
                android:visibility="gone"
                app:lottie_rawRes="@raw/connection_lost"
                app:lottie_loop="true"
                />
            <ProgressBar
                android:id="@+id/progressBar_adsFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:indeterminateTint="@color/title"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewAnnouncementPage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>