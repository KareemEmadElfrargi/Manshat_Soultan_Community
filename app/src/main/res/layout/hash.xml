<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Scroll Department ads owner of app-->
    <ScrollView
        android:id="@+id/scrolling_ads_department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/owner_app_layout_ads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/layout_part_admins"
            app:layout_constraintEnd_toEndOf="@+id/layout_part_admins"
            app:layout_constraintTop_toBottomOf="@+id/layout_part_admins"

            >
            <TextView
                android:id="@+id/title_ads_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/h3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="القسم الخاص بالاعلانات"
                android:layout_margin="@dimen/_8sdp"
                android:textSize="@dimen/_14sdp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>