<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_4sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/team1TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Team 1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/base_font_cairo"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="@dimen/_14sdp"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/pin_icon_Advertisement"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vs_icon"
                    android:layout_weight=".2"
                    />

                <TextView
                    android:id="@+id/team2TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Team 2"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:fontFamily="@font/base_font_cairo"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/title2"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                android:background="@color/circle"
                app:layout_constraintTop_toBottomOf="@id/title"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/timeTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="12:00 PM"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/time_ic"
                    android:fontFamily="@font/base_font_cairo"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:drawablePadding="@dimen/_8sdp"
                    android:textSize="@dimen/_12sdp"
                    />
                <TextView
                    android:id="@+id/dayTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Monday"
                    android:textColor="@color/black"
                    android:drawablePadding="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:drawableEnd="@drawable/day_ic"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/base_font_cairo"
                    android:textStyle="bold"
                    />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
